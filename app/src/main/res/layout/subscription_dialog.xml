<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_holo_light"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="@string/dialogTitle"
        android:textColor="@color/holoblue"
        android:paddingLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/holoblue" />
        

    <EditText
        android:id="@+id/display_name"
        style="@style/edit_text_dialog"
        android:hint="@string/source_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/source_address"
        style="@style/edit_text_dialog"
        android:hint="@string/source_url"
        android:inputType="none" 
       
        />

</LinearLayout>